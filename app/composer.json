{
  "name": "freepikcompany/api-coding-task",
  "description": "An API Backend coding task",
  "license": "MIT",
  "authors": [
    {
      "name": "Freepik Company Backend Guild",
      "email": "dev@freepik.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.0",
    "monolog/monolog": "^3.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "symfony/var-dumper": "^6.0",
    "phpunit/phpunit": "^10.0",
    "fakerphp/faker": "^1.24",
    "apigen/apigen": "v7.0.0-alpha.6",
    "nette/schema": "1.2.5"
  },
  "config": {
    "allow-plugins": true,
    "platform": {
      "php": "8.1.0"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "test/"
    }
  }
}
